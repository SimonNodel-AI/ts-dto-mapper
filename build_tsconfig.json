{
	"compilerOptions": {
		"baseUrl": "",
		"experimentalDecorators": true,
		"lib": ["es6", "dom"],
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"declaration": true,
		"outDir": "dist",
		"removeComments": false,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"@types/node",
      "@types/lodash"
		]
	},
  "include": [
    "src"
  ],
	"exclude": [
		"node_modules",
    "src/tests"
	]
}
