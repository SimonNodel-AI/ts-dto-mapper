{
	"compilerOptions": {
    "allowJs": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"sourceMap": false,
		"declaration": true,
		"outDir": "dist",
		"removeComments": false,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"@types/node",
      "@types/lodash",
      "@types/jest"
		]
	},
	"exclude": [
		"node_modules"
	]
}
